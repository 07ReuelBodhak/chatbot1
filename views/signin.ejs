<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <style>
        .container {
            height: 440px;
            width: 50%;
            border: 1px solid #4CB9E7;
            border-radius: 25px;
        }

        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
    <div class="container-md">
        <% if(typeof exist !== 'undefined' && exist){ %>
            <div class="alert alert-danger mt-5">
                Email already exist
            </div>
        <% } %>
    </div>
    <div class="mt-5 d-flex justify-content-center">
        <h2>Signup Page</h2>
    </div>
    <div class="container container-lg mt-4">
        <form action="/signin" name="form" method="post" onsubmit="return validate()">
            <div class="form-group mt-1">
                <label for="Name" class="mt-2">Name</label>
                <input type="text" class="form-control mt-2" name="name" id="Name" required>
            </div>
            <div class="form-group">
                <label for="Email" class="mt-2">Email</label>
                <input type="email" class="form-control mt-2" name="email" id="Email" required>
            </div>
            <div class="form-group">
                <label for="pass" class="mt-2">Password</label>
                <input type="password" class="form-control mt-2" name="pass" id="pass" required>
            </div>
            <div class="form-group">
                <label for="pass-2" class="mt-2">Confirm Password</label>
                <input type="password" class="form-control mt-2 Password2" id="pass-2" required>
                <div id="password-error" class="error-message"></div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Signup</button>
        </form>
        <div class="mt-1 d-flex justify-content-center message-container">
            <small class="form-text text-muted">Already have an account? <a href="/">Click here</a></small>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script>
        function validate() {
            var pass1 = document.getElementById('pass').value;
            var pass2 = document.getElementById('pass-2').value;

            var existingErrorDiv = document.getElementById('password-error');
            if (existingErrorDiv) {
                existingErrorDiv.remove();
            }

            if (pass1 !== pass2) {
                var errorDiv = document.createElement('div');
                errorDiv.id = 'password-error';
                errorDiv.classList.add('error-message');
                errorDiv.innerText = 'Passwords do not match!';
                document.getElementById('pass-2').parentNode.appendChild(errorDiv);
                return false;
            } else {
                document.forms['form'].submit();
                return true;
            }
        }
    </script>
</body>

</html>